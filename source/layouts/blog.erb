<% wrap_layout :layout do %>
  <div class="container main-colors">
    <div class='row blog'>
      <div class='col s12'>
        <header>
          <h4><%= current_article.title %></h4>
          <p>
            <span><%= current_article.data.author %></span><br>
            <time><%= current_article.date.strftime('%b %e %Y') %></time>
          </p>
        </header>
        <article>
          <%= yield %>
        </article>
      </div>
    </div>
  </div>
<% end %>
