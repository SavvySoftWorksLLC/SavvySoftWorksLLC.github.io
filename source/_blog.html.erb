<div class="blog inverted-colors">
  <div class="container" id="blog">
    <div class="row right-align">
      <a href="/feed.xml", target="_blank"><i class="mdi mdi-rss mdi-24px"></i>&nbsp;RSS</a>
    </div>
    <h4 class="section-title">Savvy Blog Latest Post</h4>
    <p class="see-more">
      <a href="/blog_archive.html">
          View the Savvy Blog Archives
           <i class="material-icons tiny">link</i>
      </a>
    </p>
    <div class="row">
      <% blog.articles[0...1].each do |article| %>
        <article class="col s12" style="padding-right: 2em;">
          <h4>
            <%= article.title %>
          </h4>
          <time><%= article.date.strftime('%b %e %Y') %></time>
          <p>by: <%= article.data.author %></p>

          <%= article.summary(500, '...') %>

          <a href="<%= article.url %>">Read more</a>
        </article>
      <% end %>
    </div>
  </div>
</div>
